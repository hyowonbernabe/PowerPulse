<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/brand_background_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="516dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Connect your device!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDeviceName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/brand_edit_text"
                android:hint="Device Name"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextDeviceDescription"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/brand_edit_text"
                android:hint="Device Description"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextAccessLink"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/brand_edit_text"
                android:hint="Access Link"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextAccessKey"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/brand_edit_text"
                android:hint="Access Key"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonPairDevice"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/brand_button_solid"
                android:text="Pair Device" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
