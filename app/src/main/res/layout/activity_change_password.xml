<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Change Password!"
            android:textStyle="bold"
            android:textSize="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brand_tertiary"
            android:text="This will update your password!"
            android:textSize="16dp"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/editTextProfileOldPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/brand_edit_text"
            android:drawableStart="@drawable/ic_brand_pwd"
            android:drawablePadding="8dp"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextChangeProfileConfirmPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/brand_edit_text"
            android:drawableStart="@drawable/ic_brand_pwd"
            android:drawablePadding="8dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextProfileNewPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/brand_edit_text"
            android:drawableStart="@drawable/ic_brand_pwd"
            android:drawablePadding="8dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/brand_button_solid"
            android:text="Change Password"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/imageSocialMediaLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>