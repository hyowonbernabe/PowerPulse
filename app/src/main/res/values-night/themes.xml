<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PowerPulse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_primary</item>
        <item name="colorSecondaryVariant">@color/brand_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <!-- Customize your dark theme here. -->
    <style name="CARD">
        <item name="android:background">@color/brand_card_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BUTTON">
        <item name="android:background">@color/brand_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>